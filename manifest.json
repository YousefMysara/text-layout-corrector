{
  "manifest_version": 3,
  "name": "Text Layout Corrector Pro",
  "version": "2.0",
  "description": "A powerful tool to correct text typed in the wrong keyboard layout, with custom rules & Right-click instantly correct",
  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "offscreen",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
