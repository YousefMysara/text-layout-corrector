{
  "manifest_version": 3,
  "name": "Text Layout Corrector Pro",
  "version": "2.0.0",
  "description": "A powerful tool to correct text typed in the wrong keyboard layout. Features dark mode, custom rules, conversion history, and multi-language support.",
  "permissions": [
    "storage",
    "contextMenus",
    "notifications",
    "offscreen",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Text Layout Corrector Pro"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "options_page": "settings.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}